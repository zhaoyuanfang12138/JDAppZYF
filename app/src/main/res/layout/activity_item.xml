<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_search_back"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/back" />



        <EditText
            android:background="@drawable/bg_shousuo"
            android:id="@+id/ed_search_box"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_search_back"
            android:layout_toLeftOf="@id/txt_search"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="小家电超级品类日,每满299减30"
            android:padding="10dp" />

        <TextView
            android:text="搜索"
            android:id="@+id/txt_search"
            android:layout_weight="1"
            android:textSize="20sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

 <com.example.lenovo.jdappzyf.first.view.weight.FlowLayout
     android:id="@+id/fl_search"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="50dp"/>



</LinearLayout>
